@model PND_WEB.ViewModels.UserRole

@{
    ViewData["Title"] = "Cập nhật role cho user";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Cập nhật role cho user", SubTitle = "Cập nhật quyền cho user" })



<div class="card">
    <div class="card-body">
      
            <div class="=row">
                <form asp-action="UpdateUserRole" method="post">
                    <div class="form-group row">
                        @Html.HiddenFor(model => model.Id)
                        <label asp-for="UserName" class="form-controll">Cập nhật quyền cho user: @Model.UserName</label>
                        
                    </div>

                    <div class="form-group row">

                        @Html.LabelFor(model => model.Roles, new { @class = "form-controll" })
                        
                            @Html.ListBoxFor(model => model.Roles, new MultiSelectList(Model.AllRoles,"Value","Text"), new {

                                @class = "chosen-select form-control",
                                    @id = "role_dropdown",
                                    multiple = "multiple"
                            })
                        
                    </div>

                <div class="form-group row">
                    <div class="col">
                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                    </div>
                </div>



                </form>
            </div>
 

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}