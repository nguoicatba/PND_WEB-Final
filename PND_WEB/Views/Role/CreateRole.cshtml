@model IdentityRole

@{
    ViewData["Title"] = "Create";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Tạo mới quyền", SubTitle = "Tạo mới quyền" })

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">CREATE ROLE</div>
            <div class="card-body">
                <partial name="_StatusMessage" model="@TempData["status"]" />
                <form asp-action="CreateRole" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-xs">Tạo mới</button>
                    <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>