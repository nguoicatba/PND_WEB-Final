@model PND_WEB.ViewModels.AgentActionEditModel

@{
    ViewData["Title"] = "Delete";

}

@await Component.InvokeAsync("HeaderBody", new { Title = "Xóa thông tin thêm của đại lý", SubTitle = "Are you sure you want to delete this?" })


<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">DELETE AGENT ACTION</div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.agentAction.Code)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.agentAction.Code)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.agentAction.PersonInCharge)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.agentAction.PersonInCharge)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.agentAction.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.agentAction.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.agentAction.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.agentAction.Email)
                    </dd>
                </dl>

                <form asp-action="AgentDelete">
                    <input type="hidden" asp-for="@Model.agentAction.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger btn-xs" />
                    <a asp-action="Details" asp-route-id="@Model.id" class="btn btn-info btn-xs">Back to List</a>
                </form>
             </div>
        </div>
    </div>
</div>



