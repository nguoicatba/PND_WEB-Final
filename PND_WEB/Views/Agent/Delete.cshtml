@model PND_WEB.Models.Agent

@{
    ViewData["Title"] = "Delete";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Xóa Agent", SubTitle = "Xóa thông tin đại lý" })

@await Component.InvokeAsync("Breadcrumb", new List<BreadcrumbItem> {
    new BreadcrumbItem { Title = "Trang chủ", Controller="Home",Action="Index",Parameter="" },
    new BreadcrumbItem { Title = "Danh sách Agent", Controller="Agent",Action="Index",Parameter="" },
    new BreadcrumbItem { Title = "Xóa Agent", Controller="",Action="",Parameter="" }
})

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">Xác nhận xóa Agent</div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Code)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Code)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AgentName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AgentName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AgentNamekd)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AgentNamekd)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AgentAdd)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AgentAdd)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Note)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Code" />
                    <input type="submit" value="Delete" class="btn btn-danger btn-xs" />
                    <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>



