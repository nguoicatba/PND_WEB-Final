@model PND_WEB.Models.Carrier

@{
    ViewData["Title"] = "Edit";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Sửa thông tin hãng tàu", SubTitle = "Sửa thông tin hãng tàu" })

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">EDIT CARRIER</div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-4">
                            <label asp-for="Code" class="control-label"></label>
                            <input asp-for="Code" class="form-control" readonly/>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="CarrierName" class="control-label"></label>
                            <input asp-for="CarrierName" class="form-control" />
                            <span asp-validation-for="CarrierName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="CarrierNamekd" class="control-label"></label>
                            <input asp-for="CarrierNamekd" class="form-control" />
                            <span asp-validation-for="CarrierNamekd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CarierAdd" class="control-label"></label>
                        <input asp-for="CarierAdd" class="form-control" />
                        <span asp-validation-for="CarierAdd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note" class="control-label"></label>
                        <input asp-for="Note" class="form-control" />
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success btn-xs" />
                        <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
