@model PND_WEB.ViewModels.CarrierActionEditModel

@{
    ViewData["Title"] = "Delete";

}

@await Component.InvokeAsync("HeaderBody", new { Title = "Xóa thông tin thêm của hãng tàu", SubTitle = "Are you sure you want to delete this?" })


<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">DELETE CARRIER ACTION</div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.carrierAction.Code)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.carrierAction.Code)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.carrierAction.PersonInCharge)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.carrierAction.PersonInCharge)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.carrierAction.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.carrierAction.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.carrierAction.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.carrierAction.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.carrierAction.LccFee)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.carrierAction.LccFee)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.carrierAction.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.carrierAction.Note)
                    </dd>
                </dl>
                <form asp-action="CarrierDelete">
                    <input type="hidden" asp-for="@Model.carrierAction.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger btn-xs" />
                    <a asp-action="Details" asp-route-id="@Model.id" class="btn btn-info btn-xs">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>