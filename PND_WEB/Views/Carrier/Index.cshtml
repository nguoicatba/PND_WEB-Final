@model IEnumerable<PND_WEB.Models.Carrier>

@{
    ViewData["Title"] = "Index";
}




@await Component.InvokeAsync("HeaderBody", new { Title = "Danh sách Carrier", SubTitle = "Danh sách thông tin hãng tàu" })

<div class="card">
    <div class="card-body">
        <partial name="_StatusMessage" model="@TempData["status"]" />
        <p>
            <a asp-action="Create" class="btn btn-primary btn-xs">Create New</a>
        </p>
        <table class="table table-striped my-4 w-100 nowrap border" id="datatable3">
            <thead class="">
                <tr>

                    <th>Action</th>
                    <th data-priority="1">@Html.DisplayNameFor(model => model.Code)</th>
                    
                    <th>@Html.DisplayNameFor(model => model.CarrierName)</th>
                    <th>
                        @Html.DisplayNameFor(model => model.CarrierNamekd)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CarierAdd)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Note)
                    </th>
                 
                    @* <th class="sort-numeric">Engine version</th> *@
                    @* <th class="sort-alpha" data-priority="2">CSS grade</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Code" class="btn btn-success btn-xs"><i class="fa fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Code" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>

                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Code"> @Html.DisplayFor(modelItem => item.Code) </a>
                        </td>
                      

                        <td>
                            @Html.DisplayFor(modelItem => item.CarrierName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CarrierNamekd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CarierAdd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                       
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


