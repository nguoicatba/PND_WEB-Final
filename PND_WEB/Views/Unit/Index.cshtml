@model IEnumerable<PND_WEB.Models.Unit>

@{
    ViewData["Title"] = "Index";
}



@await Component.InvokeAsync("HeaderBody", new { Title = "Danh sách unit", SubTitle = "Danh sách chứa các thông tin liên quan tới đơn vị tiền tệ" })


<div class="card">
    <div class="card-body">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-striped my-4 w-100" id="datatable3">
            <thead class="table-primary">
                <tr>
                    <th data-priority="1">@Html.DisplayNameFor(model => model.Code)</th>
                    <th class="col-3 text-nowrap">@Html.DisplayNameFor(model => model.UnitName)</th>
                    <th class="col-3 text-nowrap">@Html.DisplayNameFor(model => model.Note)</th>
                    <th class="col-1 text-nowrap"></th>

                    @* <th class="sort-numeric">Engine version</th> *@
                    @* <th class="sort-alpha" data-priority="2">CSS grade</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        <td class="col-1 text-nowrap" style="text-align: right; padding-right: 20px ">
                            <a asp-action="Edit" asp-route-id="@item.Code" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Code" class="btn btn-danger">Delete</a>
                            
                            
                        </td>
                    </tr>
                }
             
            </tbody>
        </table>
    </div>
</div>




