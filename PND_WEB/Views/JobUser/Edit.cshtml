@model PND_WEB.ViewModels.JobUserEditModel

@await Component.InvokeAsync("HeaderBody", new { Title = "Sửa mới người phụ trách", SubTitle = "Sửa người phụ trách" })


<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">Cập nhật người phụ trách</div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <input type="hidden" asp-for="Job_ID" value="@Model.Job_ID" />
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control"  readonly="readonly"/>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group col-6">
                            <label asp-for="Staff_Name" class="control-label"></label>
                            <input asp-for="Staff_Name" class="form-control" readonly="readonly" />
                            <span asp-validation-for="Staff_Name" class="text-danger"></span>
                        </div>

                   


                    </div>

                    
                    <div class="form-row">
                        <div class="form-group col">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>



                    </div>




                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-labeled btn-primary btn-xs">
                            <span class="btn-label"><i class="fa fa-save"></i></span>
                            Save
                        </button>
                        <a asp-action="Index" asp-route-id="@Model.Job_ID" class="btn btn-labeled btn-secondary btn-xs">
                            <span class="btn-label"><i class="fa fa-arrow-left"></i></span>
                           Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" asp-route-id="@Model.Job_ID">Back to List</a>
        </div>
        <!-- END card-->
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}
