@model List<PND_WEB.ViewModels.JobUserViewModel>

@{
    ViewData["Title"] = "Index";
}

@await Component.InvokeAsync("JobDetailsHeader", new { Title = "Phân quyền job", SubTitle = "", Job_ID = ViewBag.JobId})
<div class="row">
    <div class="col-xl-12">
        <!-- START card-->
        <div class="card card-default" id="cardDemo14">
            <div class="card-header bg-success">About job: @ViewBag.JobId</div>
            <div class="card-body">
                <div role="tabpanel">
                    <!-- Nav tabs-->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" asp-controller="Job" asp-action="Details" asp-route-id=@ViewBag.JobId>Chi tiết job</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" asp-controller="Hbls" asp-action="Index" asp-route-id=@ViewBag.JobId>List HBL</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active">Phân quyền job</a>
                        </li>

                    </ul>
                    <!-- Tab panes-->
                    <div class="tab-content">
                        <p>
                            <a asp-action="Create" asp-route-id=@ViewBag.JobId class="btn btn-primary btn-xs">Create New</a>
                        </p>
                        <table class="table table-striped my-4 w-100" id="datatable3">
                            <thead class="table-primary">
                                <tr>
                                    <th>Action</th>
                                    <th>@Html.DisplayNameFor(model => model[0].UserName)</th>
                                    <th>@Html.DisplayNameFor(model => model[0].Staff_Name)</th>
                               
                                    <th>@Html.DisplayNameFor(model => model[0].RoleName)</th>
                                    <th>@Html.DisplayNameFor(model => model[0].Description)</th>
                                    <th>@Html.DisplayNameFor(model => model[0].CreateDate)</th>

                                   

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs"><i class="fa fa-edit"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Staff_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoleName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateDate)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- END card-->
    </div>
</div>
