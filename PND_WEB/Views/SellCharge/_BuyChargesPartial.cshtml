@model List<PND_WEB.ViewModels.BuyChargeEM>

<table class="table table-sm">
    <thead>
        <tr>
            <th><input type="checkbox" id="selectAll" /></th>
            <th>Supplier</th>
            <th>Fee Name</th>
            <th>Unit</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Currency</th>
            <th>Exchange Rate</th>
            <th>VAT</th>
            <th>M VAT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var charge in Model)
        {
            <tr>
                <td><input type="checkbox" class="charge-checkbox" value="@charge.ChargeId" /></td>
                <td>@charge.SupplierName</td>
                <td>@charge.SerName</td>
                <td>@charge.SerUnit</td>
                <td>@charge.SerQuantity</td>
                <td>@charge.SerPrice</td>
                <td>@charge.Currency</td>
                <td>@charge.ExchangeRate</td>
                <td>@charge.SerVat</td>
                <td>@charge.MVat</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function() {
        $('#selectAll').change(function() {
            $('.charge-checkbox').prop('checked', $(this).prop('checked'));
        });
    });
</script> 