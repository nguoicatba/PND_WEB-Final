                        type: "POST",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    $("#custo").val(i.item.label);
                    $("#cuscontact").val(i.item.label2);
                },
                minLength: 1
            });
        });
    </script>
}
