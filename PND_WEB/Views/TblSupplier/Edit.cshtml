@model PND_WEB.Models.TblSupplier

@{
    ViewData["Title"] = "Edit";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Sửa thông tin nhà cung cấp", SubTitle = "Sửa thông tin nhà cung cấp" })

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">EDIT SUPPLIER</div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-4">
                            <label asp-for="SupplierId" class="control-label"></label>
                            <input asp-for="SupplierId" class="form-control" readonly/>
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="NameSup" class="control-label"></label>
                            <input asp-for="NameSup" class="form-control" />
                            <span asp-validation-for="NameSup" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Typer" class="control-label"></label>
         
                            <select asp-for="Typer" class="form-control" asp-items="ViewBag.Type"></select>
                            <span asp-validation-for="Typer" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="AddressSup" class="control-label"></label>
                            <input asp-for="AddressSup" class="form-control" />
                            <span asp-validation-for="AddressSup" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="LccFee" class="control-label"></label>
                            <input asp-for="LccFee" class="form-control" />
                            <span asp-validation-for="LccFee" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12">
                            <label asp-for="Note" class="control-label"></label>
                            <input asp-for="Note" class="form-control" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success btn-xs" />
                        <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
