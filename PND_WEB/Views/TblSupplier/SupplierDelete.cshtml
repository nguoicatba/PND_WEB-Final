@model PND_WEB.ViewModels.SupplierActionEditModel

@{
    ViewData["Title"] = "Delete";

}

@await Component.InvokeAsync("HeaderBody", new { Title = "Xóa thông tin thêm của nhà cung cấp", SubTitle = "Are you sure you want to delete this?" })


<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.supplierAction.SupplierId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.supplierAction.SupplierId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.supplierAction.PersonInCharge)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.supplierAction.PersonInCharge)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.supplierAction.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.supplierAction.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.supplierAction.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.supplierAction.Email)
                    </dd>
                </dl>
                <form asp-action="SupplierDelete">
                    <input type="hidden" asp-for="@Model.supplierAction.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>