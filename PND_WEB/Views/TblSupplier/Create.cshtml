@model PND_WEB.Models.TblSupplier

@{
    ViewData["Title"] = "Create";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Tạo mới Supplier", SubTitle = "Tạo mới thông tin nhà cung cấp" })

@await Component.InvokeAsync("Breadcrumb", new List<BreadcrumbItem> {
    new BreadcrumbItem { Title = "Trang chủ", Controller="Home",Action="Index",Parameter="" },
    new BreadcrumbItem { Title = "Danh sách Supplier", Controller="TblSupplier",Action="Index",Parameter="" },
    new BreadcrumbItem { Title = "Tạo mới Supplier", Controller="",Action="",Parameter="" }
})

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">Thông tin Supplier mới</div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-4">
                            <label asp-for="SupplierId" class="control-label"></label>
                            <input asp-for="SupplierId" class="form-control" />
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="NameSup" class="control-label"></label>
                            <input asp-for="NameSup" class="form-control" />
                            <span asp-validation-for="NameSup" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Typer" class="control-label"></label>
                           <select asp-for="Typer" class="form-control" asp-items="ViewBag.Type"></select>
                            <span asp-validation-for="Typer" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="AddressSup" class="control-label"></label>
                            <input asp-for="AddressSup" class="form-control" />
                            <span asp-validation-for="AddressSup" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="LccFee" class="control-label"></label>
                            <input asp-for="LccFee" class="form-control" />
                            <span asp-validation-for="LccFee" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12">
                            <label asp-for="Note" class="control-label"></label>
                            <input asp-for="Note" class="form-control" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary btn-xs" />
                        <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
