@model PND_WEB.ViewModels.SupplierActionEditModel
@{
    ViewData["Title"] = "Edit";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Chỉnh sửa thông tin thêm nhà cung cấp", SubTitle = "Chỉnh sửa thông tin thêm nhà cung cấp" })


<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">EDIT SUPPLIER ACTION</div>
            <div class="card-body">
                <form asp-action="SupplierEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="supplierAction.Id" />
                    <div class="form-row">
                        <div class="form-group col-2">
                            <label asp-for="supplierAction.SupplierId" class="control-label"></label>
                            <input asp-for="supplierAction.SupplierId" class="form-control" value=@Model.id readonly="readonly" />
                            <span asp-validation-for="supplierAction.SupplierId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-3">
                            <label asp-for="supplierAction.PersonInCharge" class="control-label"></label>
                            <input asp-for="supplierAction.PersonInCharge" class="form-control" />
                            <span asp-validation-for="supplierAction.PersonInCharge" class="text-danger"></span>
                        </div>
                        <div class="form-group col-2">
                            <label asp-for="supplierAction.PhoneNumber" class="control-label"></label>
                            <input asp-for="supplierAction.PhoneNumber" class="form-control" />
                            <span asp-validation-for="supplierAction.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-3">
                            <label asp-for="supplierAction.Email" class="control-label"></label>
                            <input asp-for="supplierAction.Email" class="form-control" />
                            <span asp-validation-for="supplierAction.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-2">
                            <label asp-for="supplierAction.Note" class="control-label"></label>
                            <input asp-for="supplierAction.Note" class="form-control" />
                            <span asp-validation-for="supplierAction.Note" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-success btn-xs" />
                        <a asp-action="Details" asp-route-id="@Model.id" class="btn btn-info btn-xs">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>