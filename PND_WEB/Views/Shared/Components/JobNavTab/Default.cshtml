@model (string Job_ID, string userName, bool hasPermission)

@{
    var currentController = ViewContext.RouteData.Values["controller"].ToString();
}

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="@(currentController == "Job" ? "nav-link active" : "nav-link")"
           asp-controller="Job" asp-action="Details" asp-route-id="@Model.Job_ID">Chi tiết job</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="@(currentController == "Hbls" ? "nav-link active" : "nav-link")"
           asp-controller="Hbls" asp-action="Index" asp-route-id="@Model.Job_ID">List HBL</a>
    </li>
    @if (Model.hasPermission)
    {
        <li class="nav-item" role="presentation">
            <a class="@(currentController == "JobUser" ? "nav-link active" : "nav-link")"
               asp-controller="JobUser" asp-action="Index" asp-route-id="@Model.Job_ID">Phân quyền job</a>
        </li>
    }
</ul> 