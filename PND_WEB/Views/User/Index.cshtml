@model IEnumerable<PND_WEB.Models.AppUserModel>

@{
    ViewData["Title"] = "Index";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Danh sách user", SubTitle = "Danh sách quản lý thông tin user" })


<div class="card">
    <div class="card-body">
        <partial name="_StatusMessage" model="@TempData["status"]" />
        <p>
            <a asp-action="Create" class="btn btn-primary btn-xs">Create New</a>
        </p>
        <table class="table nowrap border display" id="mytable" width="100%">
            <thead class="bg bg-secondary">
                <tr>
                    <th data-priority="1">@Html.DisplayNameFor(model => model.Id)</th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PasswordHash)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Staff_Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.createDate)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)

                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PasswordHash)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Staff_Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.createDate)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs"><i class="fa fa-edit"></i></a>
                            <a asp-action="ResetPW" asp-route-id="@item.Id" class="btn btn-primary btn-xs"><i class="fa fa-key"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>



