@model PND_WEB.ViewModels.UserModel

@{
    ViewData["Title"] = "Edit User";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Sửa tài khoản", SubTitle = "Sửa tài khoản" })

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">EDIT CPORT</div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" placeholder="Username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Staff_Name" class="control-label"></label>
                            <input asp-for="Staff_Name" class="form-control" placeholder="Họ tên" />
                            <span asp-validation-for="Staff_Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" type="text" readonly="readonly" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="DOB" class="control-label"></label>
                            <input asp-for="DOB" class="form-control" placeholder="Ngày sinh" />
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success btn-xs" />
                        <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
