@model PND_WEB.Models.TblCustomer

@{
    ViewData["Title"] = "Delete";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Xóa khách hàng", SubTitle = "Xóa khách hàng" })

<div class="row">
    <div class="col-xl-12">
        <partial name="_StatusMessage" model="@TempData["status"]" />
        <div class="card card-default" id="cardDemo14">
            <div class="card-header bg-danger">Delete Customer: @Model.CustomerId</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="border-bottom" style="background-color: lightgreen;">Basic info</h5>
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerId)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerId)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CompanyName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CompanyName)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ComAddress)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ComAddress)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Website)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Website)</dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <h5 class="border-bottom" style="background-color: lightgreen;">More info</h5>
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CompanyNamekd)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CompanyNamekd)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ComAddresskd)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ComAddresskd)</dd>
                        </dl>
                    </div>

                    <div class="col-md-12 mt-3">
                        <h5 class="border-bottom" style="background-color: lightgreen;">Contact Info</h5>
                        <dl class="row">
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DutyPerson)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.DutyPerson)</dd>

                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Contact)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.Contact)</dd>

                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
                        </dl>
                    </div>
                </div>

                <div class="mt-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CustomerId" />
                        <input type="submit" value="Delete" class="btn btn-danger btn-xs" />
                        <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
