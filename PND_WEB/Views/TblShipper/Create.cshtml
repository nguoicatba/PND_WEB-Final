@model PND_WEB.Models.TblShipper

@{
    ViewData["Title"] = "Create";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Tạo mới Shipper", SubTitle = "Tạo mới thông tin shipper" })

@await Component.InvokeAsync("Breadcrumb", new List<BreadcrumbItem> {
    new BreadcrumbItem { Title = "Trang chủ", Controller="Home",Action="Index",Parameter="" },
    new BreadcrumbItem { Title = "Danh sách Shipper", Controller="TblShipper",Action="Index",Parameter="" },
    new BreadcrumbItem { Title = "Tạo mới Shipper", Controller="",Action="",Parameter="" }
})

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Thông tin Shipper mới</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-4">
                            <label asp-for="Shipper" class="control-label"></label>
                            <input asp-for="Shipper" class="form-control" />
                            <span asp-validation-for="Shipper" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="ShipperName" class="control-label"></label>
                            <input asp-for="ShipperName" class="form-control" />
                            <span asp-validation-for="ShipperName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Saddress" class="control-label"></label>
                            <input asp-for="Saddress" class="form-control" />
                            <span asp-validation-for="Saddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-4">
                            <label asp-for="Scity" class="control-label"></label>
                            <input asp-for="Scity" class="form-control" />
                            <span asp-validation-for="Scity" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="SpersonInCharge" class="control-label"></label>
                            <input asp-for="SpersonInCharge" class="form-control" />
                            <span asp-validation-for="SpersonInCharge" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="TaxId" class="control-label"></label>
                            <input asp-for="TaxId" class="form-control" />
                            <span asp-validation-for="TaxId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary btn-xs" />
                        <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
