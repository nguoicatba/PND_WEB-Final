@model PND_WEB.ViewModels.CneeEditModel
@{
    ViewData["Title"] = "Edit";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Chỉnh sửa", SubTitle = "Chỉnh sửa" })


<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">Chỉnh sửa agent</div>
            <div class="card-body">
                <form asp-action="CneeAddEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CneeAdd.Id" />
                    <div class="form-row">
                        <div class="form-group col-4">
                            <label asp-for="CneeAdd.Cnee" class="control-label"></label>
                            <input asp-for="CneeAdd.Cnee" class="form-control" value=@Model.id readonly="readonly" />
                            <span asp-validation-for="CneeAdd.Cnee" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="CneeAdd.Place" class="control-label"></label>
                            <input asp-for="CneeAdd.Place" class="form-control" />
                            <span asp-validation-for="CneeAdd.Place" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="CneeAdd.PersonInCharge" class="control-label"></label>
                            <input asp-for="CneeAdd.PersonInCharge" class="form-control" />
                            <span asp-validation-for="CneeAdd.PersonInCharge" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="CneeAddEdit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>





