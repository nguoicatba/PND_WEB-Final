    <div class="col">
        <div class="card card-default">
            <div class="card-header">DELETE CNEE ADD</div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CneeAdd.Cnee)
