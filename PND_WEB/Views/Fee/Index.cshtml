@model IEnumerable<PND_WEB.Models.Fee>

@{
    ViewData["Title"] = "Index";
}


@await Component.InvokeAsync("HeaderBody", new { Title = "Danh sách Fee", SubTitle = "Danh sách thông tin phí" })



<div class="card">
    <div class="card-body">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-striped my-4 w-100" id="datatable1">
            <thead class="table-primary">
                <tr>
                    <th data-priority="1">@Html.DisplayNameFor(model => model.Code)</th>
                    <th>@Html.DisplayNameFor(model => model.Fee1)</th>
                    <th>@Html.DisplayNameFor(model => model.Unit)</th>
                    <th>@Html.DisplayNameFor(model => model.Note)</th>
                    
                       
                    

                    <th>Action</th>

                    @* <th class="sort-numeric">Engine version</th> *@
                    @* <th class="sort-alpha" data-priority="2">CSS grade</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fee1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                       
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Code" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Code" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>





