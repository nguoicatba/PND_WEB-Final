@model PND_WEB.ViewModels.BaoCaoThongKeViewModel

<div class="row mb-4">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header">
                <div class="float-left">
                    <h4 class="card-title mb-0">Số lượng vận đơn theo tháng năm @Model.Nam</h4>
                </div>
                <div class="float-right">
                    <form method="get" class="form-inline">
                        <select name="nam" id="nam" class="form-control form-control-sm" onchange="resetAndSubmit(this)">
                            @for (int i = DateTime.Now.Year; i >= 2020; i--)
                            {
                                if (Model.Nam == i)
                                {
                                    <option value="@i" selected>@i</option>
                                }
                                else
                                {
                                    <option value="@i">@i</option>
                                }
                            }
                        </select>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <canvas id="quotationChart" style="height: 300px;"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header">
                <div class="float-left">
                    <h4 class="card-title mb-0">
                        @if (string.IsNullOrEmpty(Model.Thang))
                        {
                            <span>Số lượng vận đơn theo nhân viên và tháng năm @Model.Nam</span>
                        }
                        else
                        {
                            <span>Số lượng vận đơn theo nhân viên tháng @Model.Thang năm @Model.Nam</span>
                        }
                    </h4>
                </div>
                <div class="float-right">
                    <form method="get" class="form-inline" id="monthForm">
                        <input type="hidden" name="nam" value="@Model.Nam" />
                        <select name="thang" id="thang" class="form-control form-control-sm" onchange="this.form.submit()">
                            <option value="">Tất cả các tháng</option>
                            @for (int i = 1; i <= 12; i++)
                            {
                                string monthValue = i.ToString("00");
                                if (Model.Thang == monthValue)
                                {
                                    <option value="@monthValue" selected>Tháng @monthValue</option>
                                }
                                else
                                {
                                    <option value="@monthValue">Tháng @monthValue</option>
                                }
                            }
                        </select>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <canvas id="staffChart" style="height: 300px;"></canvas>
                    </div>
                    <div class="col-md-4">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Nhân viên</th>
                                        <th>Tháng</th>
                                        <th class="text-center">Số lượng vận đơn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var stat in Model.ThongKeNguoiDungTheoThang)
                                    {
                                        <tr>
                                            <td>@stat.StaffName</td>
                                            <td>@stat.Thang</td>
                                            <td class="text-center">@stat.SoLuongQuotation</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Function to reset month selection when changing year
        function resetAndSubmit(yearSelect) {
            // Create a form and add the year parameter
            var form = document.createElement('form');
            form.method = 'get';
            
            // Add the selected year
            var yearInput = document.createElement('input');
            yearInput.type = 'hidden';
            yearInput.name = 'nam';
            yearInput.value = yearSelect.value;
            form.appendChild(yearInput);
            
            // Submit the form
            document.body.appendChild(form);
            form.submit();
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Biểu đồ thống kê theo tháng
            var ctx = document.getElementById('quotationChart').getContext('2d');
            var data = {
                labels: [@Html.Raw(string.Join(",", Model.ThongKeTheoThang.Select(x => $"'Tháng {x.Thang}'")))],
                datasets: [{
                    label: 'Vận đơn',
                    data: [@string.Join(",", Model.ThongKeTheoThang.Select(x => x.SoLuongQuotation))],
                    backgroundColor: '#9ED86E',
                    borderColor: '#9ED86E',
                    borderWidth: 0,
                    borderRadius: 4
                }]
            };

            var options = {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#f0f0f0',
                            drawBorder: false
                        },
                        ticks: {
                            stepSize: 20,
                            callback: function(value) {
                                return value + ' vận đơn';
                            }
                        },
                        title: {
                            display: true,
                            text: 'Số lượng vận đơn'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Tháng'
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                        align: 'end',
                        labels: {
                            boxWidth: 8,
                            usePointStyle: true,
                            pointStyle: 'circle'
                        }
                    }
                }
            };

            new Chart(ctx, {
                type: 'bar',
                data: data,
                options: options
            });

            // Biểu đồ thống kê theo nhân viên và tháng
            var staffCtx = document.getElementById('staffChart').getContext('2d');
            var staffData = {
                labels: [@Html.Raw(string.Join(",", Model.ThongKeNguoiDungTheoThang.Select(x => $"'{x.StaffName} - Tháng {x.Thang}'")))],
                datasets: [{
                    label: 'Vận đơn',
                    data: [@string.Join(",", Model.ThongKeNguoiDungTheoThang.Select(x => x.SoLuongQuotation))],
                    backgroundColor: '#4B89DC',
                    borderColor: '#4B89DC',
                    borderWidth: 0,
                    borderRadius: 4
                }]
            };

            var staffOptions = {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#f0f0f0',
                            drawBorder: false
                        },
                        ticks: {
                            callback: function(value) {
                                return value + ' vận đơn';
                            }
                        },
                        title: {
                            display: true,
                            text: 'Số lượng vận đơn'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Nhân viên - Tháng'
                        },
                        ticks: {
                            maxRotation: 45,
                            minRotation: 45
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                        align: 'end',
                        labels: {
                            boxWidth: 8,
                            usePointStyle: true,
                            pointStyle: 'circle'
                        }
                    }
                }
            };

            new Chart(staffCtx, {
                type: 'bar',
                data: staffData,
                options: staffOptions
            });
        });
    </script>
}