@model PND_WEB.ViewModels.TuttEditModel

@{
    ViewData["Title"] = "Delete";

}

@await Component.InvokeAsync("HeaderBody", new { Title = "Xóa thông tin thêm của đại lý", SubTitle = "Are you sure you want to delete this?" })


<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.tuttphi.SoTutt)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.tuttphi.SoTutt)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.tuttphi.SoHoaDon)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.tuttphi.SoHoaDon)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.tuttphi.TenPhi)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.tuttphi.TenPhi)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.tuttphi.SoTien)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.tuttphi.SoTien)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.tuttphi.GhiChu)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.tuttphi.GhiChu)
                    </dd>
                </dl>
                <form asp-action="TuttDelete">
                    <input type="hidden" asp-for="@Model.tuttphi.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger btn-xs" />
                    @if (User.Identity.Name == "ceo" || User.Identity.Name == "ketoan")
                    {
                        <a asp-action="CheckDetails" class="btn btn-primary btn-xs" asp-route-id=@Model.id>Back to List</a>
                    }
                    else
                    {
                        <a asp-action="Details" class="btn btn-primary btn-xs" asp-route-id=@Model.id>Back to List</a>
                    }
                </form>
            </div>
        </div>
    </div>
</div>