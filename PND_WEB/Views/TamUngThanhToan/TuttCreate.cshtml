@model PND_WEB.ViewModels.TuttEditModel

@{
    ViewData["Title"] = "Create";
}


@await Component.InvokeAsync("HeaderBody", new { Title = "Thêm mới", SubTitle = "Thêm mới" })


<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">Tạo thông tin phí tạm ứng / thanh toán</div>
            <div class="card-body">
                <form asp-action="TuttCreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">
                        <div class="form-group col-4">
                            <label asp-for="tuttphi.SoTutt" class="control-label"></label>
                            <input asp-for="tuttphi.SoTutt" class="form-control" value=@Model.id readonly="readonly" />
                            <span asp-validation-for="tuttphi.SoTutt" class="text-danger"></span>
                        </div>

                        <div class="form-group col-4">
                            <label asp-for="tuttphi.SoHoaDon" class="control-label"></label>
                            <input asp-for="tuttphi.SoHoaDon" class="form-control" />
                            <span asp-validation-for="tuttphi.SoHoaDon" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="tuttphi.TenPhi" class="control-label"></label>
                            <<div id="autocomplete-wrapper">
                                <input asp-for="tuttphi.TenPhi" id="tenphi" class="form-control" />
                            </div>
                            <span asp-validation-for="tuttphi.TenPhi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-4">
                            <label asp-for="tuttphi.SoTien" class="control-label"></label>
                            <input asp-for="tuttphi.SoTien" class="form-control" />
                            <span asp-validation-for="tuttphi.SoTien" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="tuttphi.GhiChu" class="control-label"></label>
                            <input asp-for="tuttphi.GhiChu" class="form-control" />
                            <span asp-validation-for="tuttphi.GhiChu" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary btn-xs" />
                        <a asp-action="Details" class="btn btn-info btn-xs" asp-route-id=@Model.id>Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css"
          rel="Stylesheet" type="text/css" />

    <style>
        #autocomplete-wrapper .ui-autocomplete {
            max-height: 200px;
            overflow-y: auto;
            overflow-x: hidden;
            z-index: 1050 !important;
        }
    </style>

    <script type="text/javascript">
        $(function () {
            $("#tenphi").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/TamUngThanhToan/AutoCompleteFees/',
                        data: { "prefix": request.term },
                        type: "POST",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    $("#tenphi").val(i.item.label);
                },
                minLength: 1,
                appendTo: "#autocomplete-wrapper"
            });



            const form = $("form");
            const soTienInput = $('input[name="tuttphi.SoTien"]');
            const totalThisMonth = parseFloat('@ViewBag.TotalThisMonth'.replace(',', '.')) || 0;
            const limit = parseFloat('@ViewBag.Limit'.replace(',', '.')) || 0;

            form.on("submit", function (e) {
                const currentSoTien = parseFloat(soTienInput.val().replace(',', '.')) || 0;
                const total = totalThisMonth + currentSoTien;

                if (total > limit) {
                    e.preventDefault(); // Ngăn form gửi
                    alert("Tổng số tiền tạm ứng trong tháng (bao gồm số vừa nhập) đã vượt hạn mức!");
                }
            });
        });
    </script>
}

