@model PND_WEB.Models.TblTutt

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TblTutt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SoTutt" class="control-label"></label>
                <input asp-for="SoTutt" class="form-control" />
                <span asp-validation-for="SoTutt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngay" class="control-label"></label>
                <input asp-for="Ngay" class="form-control" />
                <span asp-validation-for="Ngay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanvienTutt" class="control-label"></label>
                <input asp-for="NhanvienTutt" class="form-control" />
                <span asp-validation-for="NhanvienTutt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label"></label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" id="Tu" name="Tu" class="form-check-input control-label" value="true" @(Model != null && Model.Tu == true ? "checked" : "") />
                <label for="Tu" class="form-check-label">Tạm Ứng (TU)</label>
            </div>
            <div class="form-group">
                <input type="checkbox" id="Tt" name="Tt" class="form-check-input control-label" value="true" @(Model != null && Model.Tt == true ? "checked" : "") />
                <label for="Tt" class="form-check-label">Thanh Toán (TT)</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        const tuCheckbox = document.getElementById('TuCheckbox');
        const ttCheckbox = document.getElementById('TtCheckbox');

        tuCheckbox.addEventListener('change', function () {
            if (this.checked) {
                ttCheckbox.checked = false;
            }
        });

        ttCheckbox.addEventListener('change', function () {
            if (this.checked) {
                tuCheckbox.checked = false;
            }
        });
    </script>
}
