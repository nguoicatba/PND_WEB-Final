@model PND_WEB.Models.TblTutt

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header"><b>CREATE TẠM ỨNG / THANH TOÁN</b></div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-4">
                            <label asp-for="SoTutt" class="control-label"></label>
                            <input asp-for="SoTutt" class="form-control" />
                            <span asp-validation-for="SoTutt" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Ngay" class="control-label"></label>
                            <input asp-for="Ngay" class="form-control" type="date" value="@Model?.Ngay?.ToString("yyyy-MM-dd")" readonly />
                            <span asp-validation-for="Ngay" class="text-danger"></span>    
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="NhanvienTutt" class="control-label"></label>
                            <input asp-for="NhanvienTutt" class="form-control" />
                            <span asp-validation-for="NhanvienTutt" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-4">
                            <label asp-for="NoiDung" class="control-label"></label>
                            <input asp-for="NoiDung" class="form-control" />
                            <span asp-validation-for="NoiDung" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="GhiChu" class="control-label"></label>
                            <input asp-for="GhiChu" class="form-control" />
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="form-check form-check-inline col-auto">
                            <input class="form-check-input" type="checkbox" name="Tu" id="Tu" value="true" @(Model != null && Model.Tu == true ? "checked" : "") />
                            <label class="form-check-label" for="Tu">Tạm Ứng (TU)</label>
                        </div>
                        <div class="form-check form-check-inline col-auto">
                            <input class="form-check-input" type="checkbox" name="Tt" id="Tt" value="true" @(Model != null && Model.Tt == true ? "checked" : "") />
                            <label class="form-check-label" for="Tt">Thanh Toán (TT)</label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary btn-xs" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary btn-xs">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        const tuCheckbox = document.getElementById('Tu');
        const ttCheckbox = document.getElementById('Tt');

        tuCheckbox.addEventListener('change', function () {
            if (this.checked) {
                ttCheckbox.checked = false;
            }
        });

        ttCheckbox.addEventListener('change', function () {
            if (this.checked) {
                tuCheckbox.checked = false;
            }
        });
    </script>
}
