@model PND_WEB.Models.TblTutt

@{
    ViewData["Title"] = "Create";
}
@await Component.InvokeAsync("HeaderBody", new { Title = "Tạo tạm ứng thanh toán", SubTitle = "Tạo thông tin tạm ứng thanh toán" })
<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header"><b>CREATE TẠM ỨNG / THANH TOÁN</b></div>
            <div class="card-body">
                <form asp-action="Create" id="myForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-4">
                            <label asp-for="SoTutt" class="control-label"></label>
                            <input asp-for="SoTutt" class="form-control" readonly/>
                            <span asp-validation-for="SoTutt" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Ngay" class="control-label"></label>
                            <input asp-for="Ngay" class="form-control" type="date" value="@Model?.Ngay?.ToString("yyyy-MM-dd")" readonly />
                            <span asp-validation-for="Ngay" class="text-danger"></span>    
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="NhanvienTutt" class="control-label"></label>
                            <input asp-for="NhanvienTutt" class="form-control" />
                            <span asp-validation-for="NhanvienTutt" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-4">
                            <label asp-for="NoiDung" class="control-label"></label>
                            <input asp-for="NoiDung" class="form-control" />
                            <span asp-validation-for="NoiDung" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="GhiChu" class="control-label"></label>
                            <input asp-for="GhiChu" class="form-control" />
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="form-check form-check-inline col-auto">
                            <input class="form-check-input" type="checkbox" name="Tu" value="true" @(Model != null && Model.Tu == true ? "checked" : "") />
                            <label class="form-check-label" for="Tu">Tạm Ứng (TU)</label>
                        </div>
                        <div class="form-check form-check-inline col-auto">
                            <input class="form-check-input" type="checkbox" name="Tt" value="true" @(Model != null && Model.Tt == true ? "checked" : "") />
                            <label class="form-check-label" for="Tt">Thanh Toán (TT)</label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary btn-xs" />
                            <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById("myForm").addEventListener("submit", function (e) {
            const isTuChecked = document.querySelector('input[name="Tu"]').checked;
            const isTtChecked = document.querySelector('input[name="Tt"]').checked;

            if (!isTuChecked && !isTtChecked) {
                e.preventDefault();
                alert("Bạn phải chọn ít nhất một trong hai: Tạm Ứng (TU) hoặc Thanh Toán (TT).");
            }
        });
    </script>

}
