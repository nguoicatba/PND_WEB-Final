@model PND_WEB.Models.AppUserModel

@{
    ViewData["Title"] = "Cập nhật thông tin tài khoản";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Cập nhật thông tin tài khoản", SubTitle = "Cập nhật thông tin tài khoản" })

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">UPDATE ACCOUNT INFORMATION</div>
            <div class="card-body">
                <partial name="_StatusMessage" model="@TempData["status"]" />
       
                <form asp-action="UpdateAccount" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" readonly="readonly" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Staff_Name" class="control-label"></label>
                        <input asp-for="Staff_Name" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Staff_Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DOB" class="control-label"></label>
                        <input asp-for="DOB" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success btn-xs">Cập nhật</button>

               </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



