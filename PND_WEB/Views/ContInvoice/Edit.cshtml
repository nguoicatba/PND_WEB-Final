@model PND_WEB.ViewModels.InvoiceEditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col">
        <div class="card card-default">
            <div class="card-header">Form Edit Buy Invoice</div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="invoice.Hbl" value=@Model.invoice.Hbl />
                    <div class="form-row">


                        <div class="form-group col-4">
                            <label asp-for="invoice.DebitId" class="control-label required-label"></label>
                            <input asp-for="invoice.DebitId" class="form-control" readonly="readonly" value="@Model.invoice.DebitId" />
                            <span asp-validation-for="invoice.DebitId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-4">
                            <label asp-for="invoice.SupplierId" class="control-label required-label"></label>
                            <select asp-for="invoice.SupplierId" class="form-control select2-supplier" data-url="@Url.Action("SupplierGet", "BuyInvoice")">
                                <option value="@Model.invoice.SupplierId">@Model.invoice.SupplierId</option>
                            </select>

                            <span asp-validation-for="invoice.SupplierId" class="text-danger"></span>
                        </div>


                        <div class="form-group col-2">
                            <label asp-for="invoice.InvoiceType" class="control-label"></label>
                            <input asp-for="invoice.InvoiceType" class="form-control" readonly="readonly" />
                            <span asp-validation-for="invoice.InvoiceType" class="text-danger"></span>
                        </div>

                        <div class="form-group col-2">
                            <label asp-for="invoice.Currency" class="control-label required-label"></label>
                            <select asp-for="invoice.Currency" class="form-control">
                                <option value="USD">USD</option>
                                <option value="VND">VND</option>
                                
                            </select>
                            <span asp-validation-for="invoice.Currency" class="text-danger"></span>
                        </div>


                    </div>


                    <div class="form-row">

                        <div class="form-group col-3">
                            <label asp-for="invoice.DebitDate" class="control-label"></label>
                            <input asp-for="invoice.DebitDate" class="form-control" readonly="readonly" />
                            <span asp-validation-for="invoice.DebitDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-3">
                            <label asp-for="invoice.PaymentDate" class="control-label"></label>
                            <input asp-for="invoice.PaymentDate" class="form-control" />
                            <span asp-validation-for="invoice.PaymentDate" class="text-danger"></span>
                        </div>

                        <div class="form-group col-3">
                            <label asp-for="invoice.InvoiceNo" class="control-label"></label>
                            <input asp-for="invoice.InvoiceNo" class="form-control" />
                            <span asp-validation-for="invoice.InvoiceNo" class="text-danger"></span>
                        </div>
                        <div class="form-group col-3">
                            <label asp-for="invoice.InvoiceDate" class="control-label"></label>
                            <input asp-for="invoice.InvoiceDate" class="form-control" />
                            <span asp-validation-for="invoice.InvoiceDate" class="text-danger"></span>
                        </div>



                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary" asp-route-id="@Model.HBL_ID">Back to List</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!-- END card-->
</div>



@section CssFile {
    <link rel="stylesheet" href="~/css/components/RequiredLabel.css" />
}


@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/components/SelectList.js"></script>

}