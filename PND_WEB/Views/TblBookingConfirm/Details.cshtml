@using PND_WEB.ViewModels
@model PND_WEB.Models.TblBookingConfirm

@{
    ViewData["Title"] = "Details";
}

@await Component.InvokeAsync("HeaderBody", new { Title = "Chi tiết thông tin Booking", SubTitle = "Chi tiết thông tin Booking" })

<div class="card card-default">
    <div class="card-header bg-success">Thông tin Booking:</div>
    <div class="card-body">
        <table class="table table-bordered">
            <tr>
                <td style="border: #FFF">
                    <strong>Mã Booking:</strong>
                    <span style="margin-left: 10px">@Model.BookingId</span>
                </td>
                <td style="border: #FFF">
                    <strong>Trạng thái:</strong>
                    <span style="margin-left: 10px">@Model.Status</span>
                </td>
                <td style="border: #FFF">
                    <strong>Nhân viên:</strong>
                    <span style="margin-left: 10px">@Model.StaffName</span>
                </td>
                <td style="border: #FFF">
                    <strong>Liên lạc nhân viên:</strong>
                    <span style="margin-left: 10px">@Model.Contact</span>
                </td>
            </tr>
            <tr>
                <td style="border: #FFF">
                    <strong>Khách hàng:</strong>
                    <span style="margin-left: 10px">@Model.CustomerId</span>
                </td>
                <td style="border: #FFF">
                    <strong>Người liên hệ:</strong>
                    <span style="margin-left: 10px">@Model.PICcompany</span>
                </td>
                <td style="border: #FFF">
                    <strong>Ngày tạo:</strong>
                    <span style="margin-left: 10px">@Model.CreatedDate.ToString("dd/MM/yyyy")</span>
                </td>
                <td style="border: #FFF">
                    <strong>Ngày cập nhật:</strong>
                    <span style="margin-left: 10px">@(Model.UpdatedDate?.ToString("dd/MM/yyyy"))</span>
                </td>
            </tr>
            <tr>
                <td style="border: #FFF">
                    <strong>Loại hàng:</strong>
                    <span style="margin-left: 10px">@Model.GoodType</span>
                </td>
                <td style="border: #FFF">
                    <strong>Mã báo giá:</strong>
                    <span style="margin-left: 10px">@Model.QuotationId</span>
                </td>
                <td style="border: #FFF">
                    <strong>Ngày khởi hành:</strong>
                    <span style="margin-left: 10px">@Model.ETD.ToString("dd/MM/yyyy")</span>
                </td>
                <td style="border: #FFF">
                    <strong>Ngày đến:</strong>
                    <span style="margin-left: 10px">@Model.ETA.ToString("dd/MM/yyyy")</span>
                </td>
            </tr>
            <tr>
                <td style="border: #FFF">
                    <strong>Điểm đi (POL):</strong>
                    <span style="margin-left: 10px">@Model.POL</span>
                </td>
                <td style="border: #FFF">
                    <strong>Điểm đến (POD):</strong>
                    <span style="margin-left: 10px">@Model.POD</span>
                </td>
                <td style="border: #FFF">
                    <strong>Tên tàu:</strong>
                    <span style="margin-left: 10px">@Model.VesselName</span>
                </td>
                <td style="border: #FFF">
                    <strong>Hãng hàng không:</strong>
                    <span style="margin-left: 10px">@Model.Airline</span>
                </td>
            </tr>
            <tr>
                <td style="border: #FFF">
                    <strong>Loại container:</strong>
                    <span style="margin-left: 10px">@Model.ContainerType</span>
                </td>
                <td style="border: #FFF">
                    <strong>Số lượng container:</strong>
                    <span style="margin-left: 10px">@Model.ContainerQuantity</span>
                </td>
                <td style="border: #FFF">
                    <strong>Số chuyến bay:</strong>
                    <span style="margin-left: 10px">@Model.FlightNumber</span>
                </td>
                <td style="border: #FFF">
                    <strong>Số lượng kiện:</strong>
                    <span style="margin-left: 10px">@Model.PackageQuantity</span>
                </td>
            </tr>
            <tr>
                <td style="border: #FFF">
                    <strong>Trọng lượng (GW):</strong>
                    <span style="margin-left: 10px">@(Model.GrossWeight?.ToString("N2"))</span>
                </td>
                <td style="border: #FFF">
                    <strong>Trọng lượng tính cước:</strong>
                    <span style="margin-left: 10px">@(Model.ChargeableWeight?.ToString("N2"))</span>
                </td>
                <td style="border: #FFF">
                    <strong>Thể tích:</strong>
                    <span style="margin-left: 10px">@(Model.Volume?.ToString("N2"))</span>
                </td>
                <td style="border: #FFF">
                    <strong>Ghi chú:</strong>
                    <span style="margin-left: 10px">@Model.Remarks</span>
                </td>
            </tr>
            <tr>
                <td colspan="4" style="border: #FFF">
                    <strong>Mô tả hàng hóa:</strong>
                    <span style="margin-left: 10px">@Model.CargoDescription</span>
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-success btn-xs">Edit</a>
    <a asp-action="Index" class="btn btn-info btn-xs">Back to List</a>
</div>